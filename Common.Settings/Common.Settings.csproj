<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <Version>1.0.0</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Common-wpf</Authors>
    <PackageId>Common-wpf.Settings</PackageId>
    <Product>Common-wpf.Settings</Product>
    <Description>Provides a quick and easy way to create settings for your app that is easily accessable from both xaml and code behind.</Description>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/Zumwani/Common-wpf</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\ShellUtility\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
